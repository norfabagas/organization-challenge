<% if notice %>
<div class="alert alert-dismissable fade show <%= notice_color %>">
  <button type="button" class="close" data-dismiss="alert">&times;</button>
  <%= notice %>
</div>
<% end %>

<% if alert %>
<div class="alert alert-dismissable fade show <%= notice_color %>">
  <button type="button" class="close" data-dismiss="alert">&times;</button>
  <%= alert %>
</div>
<% end %>