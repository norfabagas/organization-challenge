<div class="container">
  <h4 class="<%= text_color %>">
    <a class="<%= btn_general %> btn-sm" href="<%= organizations_path %>">
      <i class="fas fa-arrow-left"></i>
    </a>
    <%= I18n.t('organizations.index') %>
  </h4>

  <table class="table table-hover table-striped">
    <tr>
      <td><%= I18n.t('organizations.name') %></td>
      <td><%= @organization.name %></td>
    </tr>
    <tr>
      <td><%= I18n.t('organizations.phone') %></td>
      <td><%= @organization.phone %></td>
    </tr>
    <tr>
      <td><%= I18n.t('organizations.email') %></td>
      <td><%= @organization.email %></td>
    </tr>
    <tr>
      <td><%= I18n.t('organizations.website') %></td>
      <td><%= @organization.website %></td>
    </tr>
    <tr>
      <td><%= I18n.t('organizations.logo') %></td>
      <td>
        <img src="<%= @organization.logo %>" class="img-fluid img-thumbnail" />
      </td>
    </tr>
  </table>

  <h4><%= I18n.t('persons.index') %></h4>
  <table class="table table-hover table-striped">
    <thead>
      <tr>
        <td>#</td>
        <td><%= I18n.t('persons.name') %></td>
        <td><%= I18n.t('persons.phone') %></td>
        <td><%= I18n.t('persons.email') %></td>
        <td><%= I18n.t('persons.avatar') %></td>
        <td><%= I18n.t('persons.role') %></td>
        <td><%= I18n.t('persons.actions') %></td>
      </tr>
    </thead>
    <tbody>
      <% @organization.users.each do |person| %>
        <tr>
          <td><%= person.id %></td>
          <td><%= person.name %></td>
          <td><%= person.phone %></td>
          <td><%= person.email %></td>
          <td>
            <img src="<%= person.avatar %>" class="img-thumbnail img-fluid" />
            
          </td>
          <td><%= person.role %></td>
          <td>
            <a class="<%= btn_form %> btn-sm" href="<%= edit_person_path(person.id) %>">
              <i class="fas fa-pencil-alt"></i>
            </a>
            <%= button_to 'delete', 
                person_path(person.id), 
                method: :delete, 
                data: { confirm: "Are you sure? This action cannot be undone" }, 
                class: "form-control #{btn_danger}" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>